@{
    ViewData["Title"] = "Login";
}
<div class="align-items-center">
    <form>
        <table>
            <tr>
                <td><label class="margin-5px" for="email">E-mail:</label></td>
                <td><input type="email" name="email" id="email"/></td>
            </tr>
            <tr>
                <td><label class="margin-5px" for="password">Password:</label></td>
                <td><input type="password" name="password" id="password"/></td>
            </tr>
            <tr>
                <td><input class="margin-5px" type="submit" value="Login" /></td>
            </tr>
        </table>
    </form>
</div>